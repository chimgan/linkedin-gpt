{
  "manifest_version": 3,
  "name": "LinkedIn GPT",
  "version": "1.0",
  "description": "Extend posibilities of LinkedIn by using ChatGPT",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": ["activeTab", "scripting"]
}
